<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set the background color for the spinner -->
    <solid android:color="#FFFFFF" />

    <!-- Set the border color and width for the spinner -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Define the padding for the spinner -->
    <padding
        android:left="20dp"
        android:top="8dp"
        android:bottom="8dp" />

    <!-- Define the hint text for the spinner -->
    <corners android:radius="8dp" />

</shape>