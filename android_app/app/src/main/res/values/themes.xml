<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.school_grade" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/aqua_reg</item>
        <item name="colorPrimaryVariant">@color/aqua_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/aqua_reg</item>
        <item name="colorSecondaryVariant">@color/aqua_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!--font-->
        <item name="android:fontFamily">@font/regular</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>


    </style>

    <style name="CustomProgressBar" parent="android:Widget.Material.ProgressBar">
        <item name="android:indeterminateTint">@color/white</item>
    </style>

    <style name="MyToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <!-- Set the font color -->
        <item name="android:textColor">@color/white</item>
        <!-- Set the icon color -->
        <item name="android:tint">@color/white</item>
        <!-- Set the font family -->
        <item name="android:fontFamily">@font/medium</item>
    </style>


</resources>